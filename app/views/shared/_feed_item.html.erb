<li id="<%= feed_item.id %>">
  
  <span class="user">
    <%= link_to feed_item.user.name, feed_item.user %>
  </span>
  <span class="ipc">IPC:  <%= feed_item.ipc %></span>
  <span class="successes">Total Sent: <%= feed_item.successCount %>  Success IDs: <%= feed_item.successIds %> </span>
  <span class="problems">Problems: <%= feed_item.problemCount %> Problem IDs: <%= feed_item.problemIds %> </span>
  <span class="content">Message: <%= feed_item.content %></span>
  <span class="timestamp">
    Sent <%= time_ago_in_words(feed_item.created_at) %> ago.
  </span>
  <% if current_user?(feed_item.user) %>
    <%= link_to "delete", feed_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: feed_item.content %>
  <% end %>
</li>
